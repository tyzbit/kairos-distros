{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["mergeConfidence:all-badges", "config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<dependency>\\S+):(?<currentValue>.*-k3sv(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\-.*)"
      ],
      "depNameTemplate": "{{dependency}}-k3s",
      "packageNameTemplate": "{{dependency}}",
      "versioningTemplate": "semver",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>\\S+):(?<currentValue>.*-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\-.*)"
      ],
      "depNameTemplate": "{{dependency}}-kairos",
      "packageNameTemplate": "{{dependency}}",
      "versioningTemplate": "semver",
      "datasourceTemplate": "docker"
    }
  ]
}
