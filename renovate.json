{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>\\S+):(?<currentValue>.*k3sv(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+).*)"
      ],
      "versioningTemplate": "semver",
      "datasourceTemplate": "docker"
    }
  ]
}
