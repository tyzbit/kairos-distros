{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "versioning": "regex:^[\\w\\-]+\\-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\-k3sv(?<compatibility>[^-]+)-k3s(?<build>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "versioning": "regex:^[\\w\\-]+\\-k3sv(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+).*$"
    }
  ]
}
