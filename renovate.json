{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["mergeConfidence:all-badges", "config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>\\S+):.*v(?<kairosVersion>[\\d\\.]+).*k3sv(?<k3sVersion>[\\d\\.]+).*"
      ],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "custom",
      "datasourceTemplate": "docker",
      "extractVersioning": {
        "primary": {
          "versioning": "semver",
          "versionField": "kairosVersion"
        },
        "secondary": {
          "versioning": "semver",
          "versionField": "k3sVersion"
        }
      },
      "compareVersioning": [
        {
          "versionField": "k3sVersion",
          "versioning": "semver"
        },
        {
          "versionField": "kairosVersion",
          "versioning": "semver"
        }
      ]
    }
  ]
}
