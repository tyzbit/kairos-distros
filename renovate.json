{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM\\s+\\S+:(?<depName>[a-zA-Z0-9-/]+):.*\\-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+).*",
        "FROM\\s+\\S+:(?<depName>[a-zA-Z0-9-/]+):.*\\-k3sv(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+).*"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
