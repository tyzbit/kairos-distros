{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["quay.io/kairos/debian"],
      "versioning": "regex:^bookworm-standard-amd64-generic-v(?<kairos>\\d+\\.\\d+\\.\\d+)-k3sv(?<k3s>\\d+\\.\\d+\\.\\d+)-k3s1$",
      "updateTypes": ["minor", "patch"],
      "matchCurrentVersion": "^.*-k3sv(?<k3s>\\d+\\.\\d+\\.\\d+)-.*",
      "enabled": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["quay.io/kairos/debian"],
      "versioning": "regex:^bookworm-standard-amd64-generic-v(?<kairos>\\d+\\.\\d+\\.\\d+)-k3sv(?<k3s>\\d+\\.\\d+\\.\\d+)-k3s1$",
      "updateTypes": ["major", "minor", "patch"],
      "matchCurrentVersion": "^bookworm-standard-amd64-generic-v(?<kairos>\\d+\\.\\d+\\.\\d+)-.*",
      "enabled": true
    }
  ]
}
